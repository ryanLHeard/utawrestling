<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
<head>
    <% include templates/head.ejs %>
</head>
<body>
    <div class="container">
        <% include templates/header.ejs %>
       <div  class="colDecor">
            <legend><h3>Active Wrestlers</h3></legend>
            <legend><h3>Former Wrestlers</h3></legend>
            <table class="table table-bordered table-striped">
                <tr>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Weight</th>
                    <th>Major</th>

                </tr>
                <% people.forEach(function(person){%>
                    <tr>
                        <td>
                            <label><%= person.firstName + " "+person.lastName %></label>
                            <% if(person.photos.length > 0){ %>
                                <br>
                                <img class="generalPicture" src=<%= person.photos[0] %> >
                            <%}%>

                        </td>
                        <td><%= person.role %></td>
                        <td><%= person.weight %></td>
                        <td><%= person.major %></td>
                    </tr>
                <%}); %>
            </table>

        </div>
     </div>
</body>
</html>
